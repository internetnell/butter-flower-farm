<footer class="site-footer">
    <div class="container" style="display: grid">
        <!-- Images -->
        <div class="container">
            <img class="dried-bouquet" src="assets/dried-bouquet.png" alt="Dried bouquet">
            <img class="pansy"  src="assets/lil-pansy.png" alt="Pink and yellow pansy">
            <img class="can"  src="assets/watering-can.png" alt="Watering can">
            <img class="butterfly"  src="assets/butterfly.png" alt="Blue Butterfly">
            <img class="greenhouse"  src="assets/greenhouse.png" alt="Greenhouse">
            <img class="sunflower"  src="assets/sunflower.png" alt="Sunflower">
            <img class="tall-monsters"  src="assets/tall-monsters.png" alt="Tall bouquet of flowers">
        </div>

        <!-- Column: Newsletter Signup -->
        <div  style="grid-column: 1 / span 8;">
            <h3 class="footer-cta">Get Flowers in your Inbox</h3>
            <form method="post" action="/contact#footer-newsletter" accept-charset="UTF-8" class="footer-newsletter-form">
                <input type="hidden" name="form_type" value="customer" />
                <input type="hidden" name="utf8" value="âœ“" />
                <input
                    type="email"
                    name="contact[email]"
                    placeholder="Your email address"
                    required
                    style="padding: 0.5rem; width: 70%; margin-bottom: 0.5rem;"
                />
                <button type="submit" style="padding: 0.5rem 1rem;">Subscribe</button>
            </form>
        </div>
        
        

        <!-- Column: Footer Menu Links-->
        <div class="footer-links">
            {% assign links = linklists.footer.links %}
            {% assign half = links.size | divided_by: 2 %}
            
            <!-- Column 1-->
            <div>
                <ul class="footer-link" style="list-style: none">
                    {% for link in links limit: half %}
                    <li>
                        <a href="{{ link.url }}" class="footer-link" style="text-decoration: none; color: inherit;">
                        {{ link.title }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Column 2-->
            <div>
                <ul class="footer-link" style="list-style: none">
                    {% for link in links offset: half %}
                    <li>
                        <a href="{{ link.url }}" class="footer-link" style="text-decoration: none; color: inherit;">
                        {{ link.title }}
                        </a>
                    </li>
            </div>

                {% endfor %}
            </ul>
        </div>
    </div>
</footer>