    }
  /* -- Facebook -- */
    .facebook{ 
      grid-column: 7 / span 3;
    }
    .facebook svg{
      width: 74%;
      height: auto;
      display: block;
      margin-top: 7rem;
      justify-self: center;
    }
    .facebook svg:hover{
      filter: blur(1.5px);
    }
  /* -- Greenhouse -- */
    .greenhouse{ 
      grid-column: 10 / span 3;
    }
    .greenhouse img{
      width: 85%;
      height: auto;
      display: block;
      justify-self: left;
      margin-top: 3rem;
    }
    
    /* -- Floating images - Row 2 -- */
  /* -- Dried Bouquet -- */
    .dried-bouquet{
      grid-column: 1 / span 3;
    }
    .dried-bouquet img{
      width: 65%;
      height: auto;
      display: block;
      justify-self: center;
    }
  /* -- Flower-3 -- */
    .flower-3{
      grid-column: 4 / span 2;
    }
    .flower-3 img{
      width: 70%;
      height: auto;
      display: block;
      justify-self: left;
      margin-top: 2rem;
    }
  /* -- Watering Can -- */
    .can {
      grid-column: 6 / span 2;
    }
    .can img{
      width: 90%;
      height: auto;
      display: block;
      justify-self: center;
      margin-top: 5.5rem;
    }
  /* -- Flower-4 -- */
    .flower-4{ 
      grid-column: 8 / span 2;
    }
    .flower-4 img{
      width: 45%;
      height: auto;
      display: block;
      justify-self: right;
      margin-top: 4rem;
    }
  /* -- Butterfly -- */
    .butterfly{ 
      grid-column: 10 / span 3;
    }
    .butterfly img{
      width: 60%;
      height: auto;
      display: block;
      justify-self: center;
      margin-top: 3rem;
    }
  
