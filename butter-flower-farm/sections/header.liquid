<style>
  body {
    background-image: linear-gradient(var(--color-accent-3), var(--color-bg));
  }
  /************** Page Border **************/

  /*Border edge boxes*/
  .top-right {
    width: var(--border-size);
    background-color: var(--color-accent-1);
    height: var(--border-size);
    position: fixed;
    z-index: 9999;
    margin-left: calc(100% - var(--border-size));
  }
  .top-left {
    width: var(--border-size);
    background-color: var(--color-contrast);
    height: var(--border-size);
    position: fixed;
    z-index: 9999;
  }
  .bottom-right {
    width: var(--border-size);
    background-color: var(--color-secondary);
    height: var(--border-size);
    position: fixed;
    z-index: 9999;
    margin-left: calc(100% - var(--border-size));
    margin-top: calc(100vh - var(--border-size));
  }
  .bottom-left {
    width: var(--border-size);
    background-color: var(--color-accent-2);
    height: var(--border-size);
    position: fixed;
    z-index: 9999;
    margin-top: calc(100vh - var(--border-size));
  }
  .page-border .border {
    position: fixed;
    z-index: 9998;
    white-space: nowrap;
    pointer-events: none;
  }
  /* Bottom border */
  .page-border .border-bottom {
    font-family: 'nimbus-condensed', 'sans-serif';
    text-transform: lowercase;
    font-size: 26px;
    background-color: var(--color-contrast);
    color: var(--color-contrast);
    font-weight: 900;
    bottom: 0;
    left: 0;
    width: 100%;
    line-height: var(--border-size);
    text-align: center;
  }
  /* Top border */
  .page-border .border-top {
    font-family: 'nimbus-condensed', 'sans-serif';
    text-transform: lowercase;
    font-size: 28px;
    background-color: var(--color-primary);
    color: var(--color-primary);
    font-weight: 900;
    line-height: var(--border-size);
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;
  }
  /* Left border */
  .page-border .border-left {
    font-family: 'nimbus-condensed', 'sans-serif';
    text-transform: lowercase;
    font-size: 28px;
    background-color: var(--color-secondary);
    color: var(--color-secondary);
    font-weight: 900;
    line-height: var(--border-size);
    top: 0;
    left: 0;
    height: 100%;
    writing-mode: vertical-rl;
    text-align: center;
  }
  /* Right border */
  .page-border .border-right {
    font-family: 'nimbus-condensed', 'sans-serif';
    text-transform: lowercase;
    font-size: 28px;
    background-color: var(--color-accent-2);
    color: var(--color-accent-2);
    font-weight: 900;
    line-height: var(--border-size);
    top: 0;
    right: 0;
    height: 100%;
    writing-mode: vertical-rl;
    text-align: center;
  }
  /************** Navigation **************/
  .nav {
    display: flex;
    justify-content: space-between;
    padding-top: calc(
      var(--border-size) + var(--space-sm)
    );
    padding-right: var(--space-page-margin);
    padding-left: var(--space-page-margin);
  }
  .leading {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }
  .logo svg {
    width: 24px;
    height: 24px;
    fill: var(--color-contrast);
  }
  .logo:hover {
    filter: blur(1.5px);
  }
  .link-list {
    list-style: none;
    padding: 0;
    display: flex;
    gap: var(--space-sm);
    align-items: center;
    margin: 5px 0 0 0;
  }
  nav a {
    font-family: 'nimbus-condensed', 'sans-serfif';
    font-size: 18px;
    line-height: var(--line-height-title);
    color: var(--color-contrast);
    font-weight: normal;
    text-decoration: none;
  }
  .nav-link:hover {
    filter: blur(1.5px);
  }
  .cart {
    display: flex;
    align-items: center;
    margin: 5px 0 0 0;
  }
  .cart a:hover {
    filter: blur(1.5px);
  }

/***** Mobile ***/

/* Mobile menu toggle button */
.mobile-menu-link {
  display: none;
  font-family: 'nimbus-condensed', 'sans-serif';
  font-size: 18px;
  line-height: var(--line-height-title);
  color: var(--color-contrast);
  text-decoration: none;
}

.mobile-menu-link:hover {
  filter: blur(1.5px);
}

/* Fullscreen mobile nav overlay */
.mobile-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(30px);
  display: none;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  z-index: 2000;
}

.mobile-nav.active {
  display: flex;
}

.mobile-nav ul {
  list-style: none;
  padding: 0;
  margin: var(--border-size);
  text-align: left;
}

.mobile-nav a {
  font-family: 'nimbus-condensed', 'sans-serif';
  font-size: var(--font-size-title);
  text-decoration: none;
}

/* Nav link list items */
.mobile-nav li:nth-child(1) a {
  background-color: var(--color-accent-2);
  color: var(--color-primary);
  display: inline-block;
  padding: var(--space-sm);;
}
.mobile-nav li:nth-child(2) a {
  background-color: var(--color-primary);
  color: var(--color-contrast);
  display: inline-block;
  padding: var(--space-sm);;
}
.mobile-nav li:nth-child(3) a {
  background-color: var(--color-accent-1);
  color: var(--color-primary);
  display: inline-block;
  padding: var(--space-sm);;
}
.mobile-nav li:nth-child(4) a {
  background-color: var(--color-secondary);
  color: var(--color-contrast);
  display: inline-block;
  padding: var(--space-sm);;
}
.mobile-nav li:nth-child(5) a {
  background-color: var(--color-contrast);
  color: var(--color-primary);
  display: inline-block;
  padding: var(--space-sm);;
}
.mobile-nav li:nth-child(6) a {
  background-color: var(--color-accent-2);
  color: var(--color-primary);
  display: inline-block;
  padding: var(--space-sm);;
}


.close-btn {
  position: absolute;
  top: var(--border-size);
  right: var(--border-size);
  background: none;
  color: var(--color-contrast);          
  display: inline-block;
  padding-top: var(--space-sm);
  border: none;
  font-family: 'nimbus-condensed', 'sans-serif';
  font-size: var(--font-size-title);
  text-transform: lowercase;
  font-weight: 400;
  cursor: pointer;
  z-index: 2100;
}

/* Mobile media query */
@media (max-width: 768px) {
  .link-list {
    display: none;
  }
  .logo {
    display: none;
  }
  .page-border .border-right {
    display: none;
  }
  .page-border .border-left {
    display: none;
  }
  .mobile-menu-link {
    display: inline-block;
  }
}
</style>

