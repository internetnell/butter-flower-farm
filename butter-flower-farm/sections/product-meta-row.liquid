  .meta-flower-5 {
    background-image: url('https://cdn.shopify.com/s/files/1/0763/4495/1042/files/metadata-flower-5.svg?v=1755548020');
    background-repeat: no-repeat;
    background-size: contain;
    grid-column: 9 / span 2;
    background-position: center;
  }
  .meta-flower-6 {
    background-image: url('https://cdn.shopify.com/s/files/1/0763/4495/1042/files/metadata-flower-6.svg?v=1755548023');
