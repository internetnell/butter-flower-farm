    background-size: contain;
    grid-column: 5 / span 2;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .meta-flower-3 h3 {
    width: 40%;
    text-align: center;
    color: var(--color-secondary);
  }
  .meta-flower-4 {
    background-image: url('https://cdn.shopify.com/s/files/1/0763/4495/1042/files/metadata-flower-4.svg?v=1755548015');
    background-repeat: no-repeat;
    background-size: contain;
    grid-column: 7 / span 2;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
