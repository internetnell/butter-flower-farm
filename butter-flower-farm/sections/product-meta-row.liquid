<style>
  /* Product Metadata Row */
  .meta-row {
    height: 30vh;
    padding: 0;
    margin: 0 var(--space-page-margin);
  }

  .meta-flower-1 {
    background-image: url('https://cdn.shopify.com/s/files/1/0763/4495/1042/files/metadata-flower-1.svg?v=1755548003');
    background-repeat: no-repeat;
    background-size: contain;
    grid-column: 1 / span 2;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .meta-flower-1 h3 {
    width: 50%;
    text-align: center;
    color: var(--color-primary);
  }
  .meta-flower-2 {
    background-image: url('https://cdn.shopify.com/s/files/1/0763/4495/1042/files/metadata-flower-2.svg?v=1755548008');
