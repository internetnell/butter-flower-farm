<style>
    /* Type styles from theme.css */
    h1, h2 {
        font-family: var(--font-heading, 'Montserrat', sans-serif);
        font-weight: 700;
        color: var(--color-heading, #222);
        margin-bottom: 0.5em;
    }
    p {
        font-family: var(--font-body, 'Open Sans', sans-serif);
        color: var(--color-body, #444);
        margin-bottom: 1em;
    }

    
    /* 12-column grid */
    .shop-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 2rem;
        margin: 2rem 0;
    }
    .shop-section {
        grid-column: span 6;
        background: var(--color-bg-section, #fafafa);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }
    .collection-title {
        margin-bottom: 1rem;
    }
    .products-list {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    .product-card {
        background: #fff;
        border-radius: 6px;
        padding: 1rem;
        box-shadow: 0 1px 4px rgba(0,0,0,0.03);
        text-align: center;
    }
    .product-card img {
        max-width: 100%;
        border-radius: 4px;
        margin-bottom: 0.5rem;
    }
    .product-title {
        font-size: 1.1em;
        margin-bottom: 0.25em;
    }
    .product-price {
        color: var(--color-accent, #b48a78);
        font-weight: 600;
        margin-bottom: 0.5em;
    }
    .product-link {
        display: inline-block;
        padding: 0.5em 1em;
        background: var(--color-accent, #b48a78);
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.95em;
        transition: background 0.2s;
    }
    .product-link:hover {
        background: #a06d5a;
    }
</style>

<h1>Shop</h1>
<div class="shop-grid">
    <!-- Shop Bouquets Collection -->
    <section class="shop-section">
        <h2 class="collection-title">Shop Bouquets</h2>
        <div class="products-list">
            {% assign bouquets = collections['shop-bouquets'].products %}
            {% for product in bouquets %}
                <div class="product-card">
                    <a href="{{ product.url }}">
                        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                    </a>
                    <div class="product-title">{{ product.title }}</div>
                    <div class="product-price">{{ product.price | money }}</div>
                    <a class="product-link" href="{{ product.url }}">View</a>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Shop Merch Collection -->
    <section class="shop-section">
        <h2 class="collection-title">Shop Merch</h2>
        <div class="products-list">
            {% assign merch = collections['shop-merch'].products %}
            {% for product in merch %}
                <div class="product-card">
                    <a href="{{ product.url }}">
                        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                    </a>
                    <div class="product-title">{{ product.title }}</div>
                    <div class="product-price">{{ product.price | money }}</div>
                    <a class="product-link" href="{{ product.url }}">View</a>
                </div>
            {% endfor %}
        </div>
    </section>
</div>