<link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
<style>
    body {
    background-image: linear-gradient(var(--color-accent-3), var(--color-bg));   
}

    .container {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: var(--space-lg);
        margin: 0 auto;
        padding: var(--space-lg) 0;
    }
    .product-image {
        grid-column: span 6;
        width: 100%;
        height: auto;
        object-fit: cover;
    }
    .product-details {
        grid-column: span 5;
        display: flex;
        flex-direction: column;
        justify-content: top;
        padding-left: 24px;
    }
    h1{
    margin: 0;
}
</style>

<div class="container">
    <img
        class="product-image"
        src="{{ product.featured_image | img_url: '800x800' }}"
        alt="{{ product.title }}"
    />

    <div class="product-details">
        <h1 class="title">{{ product.title }}</h1>
        <div>
            <p class="body">
                {{ product.description }}
            </p>
        </div>

        <button
            class="button"
            onclick="window.location.href='{{ product.url }}'">
        
            <a href="/cart/add?id={{ product.variants.first.id }}" class="button">Add to Cart</a>

        </button>

    </div>

    
</div>