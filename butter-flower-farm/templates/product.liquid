<link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
<style>
    .container {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: var(--space-lg);
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--space-lg);
    }
    .product-image {
        grid-column: span 6;
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 8px;
    }
    .product-details {
        grid-column: span 6;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 24px;
    }
</style>

<div class="container">
    <img
        class="product-image"
        src="{{ product.featured_image | img_url: '800x800' }}"
        alt="{{ product.title }}"
    />
    <div class="product-details">
        <h1 class="title">{{ product.title }}</h1>
        <div class="">
            <p class="p">
                {{ product.description }}
            </p>
        </div>
    </div>
</div>