<style>
.cart-container {
    max-width: 700px;
    min-height: calc(100vh - 356.278px);
    margin: 40px auto;
}
.cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 24px;
}
.cart-table th, .cart-table td {
    padding: 12px 8px;
    border-bottom: 1px solid #eee;
    text-align: left;
}
.cart-product-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 4px;
}
.cart-qty-input {
    width: 48px;
    padding: 6px;
    border: 1px solid #ccc;
    text-align: center;
}
.cart-remove-btn {
    background: none;
    border: none;
    color: #d32f2f;
    font-size: 1.2em;
    cursor: pointer;
    margin-left: 8px;
    transition: color 0.2s;
}
.cart-remove-btn:hover {
    color: #b71c1c;
}
.cart-summary {
    text-align: right;
    font-size: 1.2rem;
    margin-bottom: 24px;
}
.cart-checkout-btn {
    display: inline-block;
    background: #2d7a46;
    color: #fff;
    padding: 14px 32px;
    border: none;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: bold;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
}
.cart-checkout-btn:hover {
    background: #256338;
}
.cart-empty {
    text-align: center;
    font-size: 1.2rem;
    color: #888;
    margin: 40px 0;
}
</style>


<div class="cart-container">
    <div class="cart-title">Your Cart</div>
    {% if cart.item_count > 0 %}
        <form action="/cart/change" method="post">
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th></th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in cart.items %}
                    <tr>
                        <td>
                            {% if item.image %}
                                <img src="{{ item.image | img_url: '100x100' }}" alt="{{ item.title }}" class="cart-product-image">
                            {% endif %}
                        </td>
                        <td>
                            <div>{{ item.product.title }}</div>
                            {% if item.variant.title != 'Default Title' %}
                                <div style="color:#888; font-size:0.95em;">{{ item.variant.title }}</div>
                            {% endif %}
                        </td>
                        <td>{{ item.price | money }}</td>
                        <td>
                            <input class="cart-qty-input" type="number" name="updates[{{ item.key }}]" value="{{ item.quantity }}" min="1">
                        </td>
                        <td>{{ item.line_price | money }}</td>
                        <td>
                            <button class="cart-remove-btn" type="submit" name="updates[{{ item.key }}]" value="0" title="Remove item">&times;</button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="cart-summary">
                <strong>Subtotal:</strong> {{ cart.total_price | money }}
            </div>
            <button type="submit" class="cart-checkout-btn" formaction="/cart" formmethod="post">Update Cart</button>
            <a href="/checkout" class="cart-checkout-btn">Proceed to Checkout</a>
        </form>
    {% else %}
        <div class="cart-empty">Your cart is currently empty.</div>
    {% endif %}



    
</div>

{% section 'footer' %}