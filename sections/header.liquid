<style>
  body {
    background-image: linear-gradient(var(--color-accent-3), var(--color-bg));
  }
  /************** Page Border **************/

  .page-border .border {
    position: fixed;
    z-index: 990;
    white-space: nowrap;
    pointer-events: none;
  }
  /* Bottom border */
  .page-border .border-bottom {
    font-family: 'TeXGyreHeros-Condensed', sans-serif;
    text-transform: lowercase;
    font-size: 26px;
    background-color: var(--color-contrast);
    color: var(--color-primary);
    font-weight: 900;
    bottom: 0;
    left: 0;
    width: 100%;
    line-height: var(--border-size);
    text-align: center;
  }
  /* Left border */
  .page-border .border-left {
    background-color: var(--color-accent-1);
    color: var(--color-secondary);
    top: 0;
    left: 0;
    height: 100%;
    width: var(--border-size);
  }
  /* Right border */
  .page-border .border-right {
    background-color: var(--color-accent-1);
    top: 0;
    right: 0;
    height: 100%;
    width: var(--border-size);
  }
  /************** Navigation **************/
  .nav-wrapper {
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 999;
  }
  .nav {
    background-color: var(--color-primary);
    display: flex;
    justify-content: space-between;
    padding-top: 0;
    z-index: 999;
    padding-left: var(--border-size);
    padding-right: var(--border-size);
  }
  .link-list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0 0 0 0;
    height: var(--border-size);
    align-items: center;
    text-align: center;
  }
  .link-list li:nth-child(1) {
    display: flex;
    align-items: center;
    background-color: var(--color-secondary);
    padding: 0 var(--space-xs);
    height: 100%;
  }
  .link-list li:nth-child(2) {
    display: flex;
    align-items: center;
    background-color: var(--color-primary);
    padding: 0 var(--space-xs);
    height: 100%;
  }
  .link-list li:nth-child(3) {
    display: flex;
    align-items: center;
    background-color: var(--color-accent-3);
    padding: 0 var(--space-xs);
    height: 100%;
  }
  .link-list li:nth-child(4) {
    display: flex;
    align-items: center;
    background-color: var(--color-accent-1);
    padding: 0 var(--space-xs);
    height: 100%;
  }
  nav a {
    font-family: 'TeXGyreHeros-Condensed', sans-serif;
    font-size: 18px;
    line-height: var(--line-height-title);
    color: var(--color-contrast);
    font-weight: normal;
    text-decoration: none;
  }
  .nav-link:hover {
    filter: blur(1.5px);
  }
  .cart a {
    display: flex;
    align-items: center;
    background-color: var(--color-bg);
    padding: 0 var(--space-xs);
    height: 100%;
  }

  .cart span {
    padding-left: 5px;
  }
  .cart a:hover {
    filter: blur(1.5px);
  }

  /***** Mobile ***/

  /* Mobile menu toggle button */
  .mobile-menu-link {
    display: none;
    font-family: 'TeXGyreHeros-Condensed', sans-serif;
    font-size: 18px;
    line-height: var(--line-height-title);
    color: var(--color-contrast);
    text-decoration: none;
  }

  .mobile-menu-link:hover {
    filter: blur(1.5px);
  }

  /* Fullscreen mobile nav overlay */
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(30px);
    display: none;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    z-index: 2000;
  }

  .mobile-nav.active {
    display: flex;
  }

  .mobile-nav ul {
    list-style: none;
    padding: 0;
    margin: var(--border-size);
    text-align: left;
  }

  .mobile-nav a {
    font-family: 'TeXGyreHeros-Condensed', sans-serif;
    font-size: var(--font-size-title);
    text-decoration: none;
  }

  /* Nav link list items */
  .mobile-nav li:nth-child(1) a {
    background-color: var(--color-accent-2);
    color: var(--color-primary);
    display: inline-block;
    padding: var(--space-sm);
  }
  .mobile-nav li:nth-child(2) a {
    background-color: var(--color-primary);
    color: var(--color-contrast);
    display: inline-block;
    padding: var(--space-sm);
  }
  .mobile-nav li:nth-child(3) a {
    background-color: var(--color-accent-1);
    color: var(--color-primary);
    display: inline-block;
    padding: var(--space-sm);
  }
  .mobile-nav li:nth-child(4) a {
    background-color: var(--color-secondary);
    color: var(--color-contrast);
    display: inline-block;
    padding: var(--space-sm);
  }
  .mobile-nav li:nth-child(5) a {
    background-color: var(--color-contrast);
    color: var(--color-primary);
    display: inline-block;
    padding: var(--space-sm);
  }
  .mobile-nav li:nth-child(6) a {
    background-color: var(--color-accent-2);
    color: var(--color-primary);
    display: inline-block;
    padding: var(--space-sm);
  }

  .close-btn {
    position: absolute;
    top: var(--border-size);
    right: var(--border-size);
    background: none;
    color: var(--color-contrast);
    display: inline-block;
    padding-top: var(--space-sm);
    border: none;
    font-family: 'TeXGyreHeros-Condensed', sans-serif;
    font-size: var(--font-size-title);
    text-transform: lowercase;
    font-weight: 400;
    cursor: pointer;
    z-index: 2100;
  }

  /* Mobile media query */
  @media (max-width: 768px) {
    .link-list {
      display: none;
    }
    .logo {
      display: none;
    }
    .page-border .border-right {
      display: none;
    }
    .page-border .border-left {
      display: none;
    }
    .mobile-menu-link {
      display: inline-block;
    }
  }
</style>

<div class="page-border">
  <div class="border border-left"></div>
  <div class="border border-right"></div>
</div>

<main>
  <div class="nav-wrapper">
    <nav class="nav">
      <div class="leading">
        <!-- Mobile "Menu" link -->
        <a href="#" class="mobile-menu-link" id="mobileMenuLink">Menu</a>

        <ul class="link-list">
          {% for link in linklists['main-menu'].links %}
            <li class="nav-link">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="cart">
        <a href="/cart" aria-label="View cart">
          Cart
          <span class="cart-count"> ({{ cart.item_count | default: 0 }}) </span>
        </a>
      </div>
    </nav>
  </div>

  <!-- Mobile nav -->
  <div class="mobile-nav" id="mobileNav">
    <button class="close-btn" id="closeNav">(close)</button>
    <ul>
      {% for link in linklists['main-menu'].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mobileMenuLink = document.getElementById('mobileMenuLink');
    const mobileNav = document.getElementById('mobileNav');
    const closeBtn = document.getElementById('closeNav');

    mobileMenuLink.addEventListener('click', (e) => {
      e.preventDefault(); // prevent page jump
      mobileNav.classList.add('active');
    });

    closeBtn.addEventListener('click', () => {
      mobileNav.classList.remove('active');
    });
  });
</script>
